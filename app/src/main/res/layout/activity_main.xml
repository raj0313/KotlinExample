<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <EditText
            android:hint="Enter message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:id="@+id/msgDisplay" android:layout_marginTop="59dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="72dp" android:layout_marginStart="72dp"
            android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="78dp" android:layout_marginEnd="78dp"/>
    <Button
            android:text="SEND MESSAGE"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_alignParentTop="true" android:id="@+id/btnShowToast" android:layout_marginTop="254dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="142dp" android:layout_marginStart="142dp"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="210dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
            android:onClick="sendMessage"/>

</LinearLayout>